<div data-vbox>
	<% flash.each do |message_type, message| %>
		<div class="info-bar <%= message_type %>"><%= message %></div>
	<% end %>

	<h2>Merit Cards Sync: Login</h2>

	<%= form_with url: login_path, html: { novalidate: true, "data-vbox" => "" } do |f| %>
		<table class="form-table">
			<tr>
				<td><%= f.label :email, "E-mail address:" %></td>
				<td><%= f.email_field :email, value: @email %></td>
			</tr>

			<tr>
				<td><%= f.label :password, "Password:" %></td>
				<td><%= f.password_field :password, value: @password %></td>
			</tr>
		</table>

		<p class="Ta(e)"><%= f.submit "Log in", class: "button" %></p>
	<% end %>
</div>
